    <TextView
        android:id="@+id/description"
        android:layout_margin="5dp"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:text="desc"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo" />

    <TextView
        android:id="@+id/temper_label"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18dp"
        android:text="Temperament"

        />

    <TextView
        android:id="@+id/temper"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toEndOf="@id/temper_label"
        android:textSize="18dp"
        android:text="temp"
        />
    <TextView
        android:id="@+id/origin_label"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/temper"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18dp"
        android:text="Origins"
        />
    <TextView
        android:id="@+id/origin"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/temper"
        app:layout_constraintStart_toEndOf="@id/origin_label"
        android:textSize="18dp"
        android:text="origins"
        />

    <TextView
        android:id="@+id/lifespan_label"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/origin"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18dp"
        android:text="Lifespan (Years)" />
    <TextView
        android:id="@+id/lifespan"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/origin"
        app:layout_constraintStart_toEndOf="@id/lifespan_label"
        android:textSize="18dp"
        android:text="lifeexpectancy"
        />

    <TextView
        android:id="@+id/dog_friendly"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/lifespan"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18dp"
        android:text="Dog Friendliness" />

    <TextView
        android:id="@+id/df_label"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/lifespan_label"
        app:layout_constraintStart_toEndOf="@id/dog_friendly"
        android:textSize="18dp"
        android:text="friendly"
        />

    <TextView
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
       app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15dp"
        android:text="https://en.wikipedia.org/wiki/cat"
        />




</androidx.constraintlayout.widget.ConstraintLayout>